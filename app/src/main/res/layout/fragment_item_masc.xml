<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgFotoMsc"
        android:layout_width="154dp"
        android:layout_height="163dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txtDescrMsc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:text="Descripcion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imgFotoMsc"
        app:layout_constraintTop_toBottomOf="@+id/txtEdadMsc" />

    <TextView
        android:id="@+id/txtNombreMsc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="Nombre"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txtEspecieMsc"
        app:layout_constraintTop_toTopOf="@+id/imgFotoMsc" />

    <TextView
        android:id="@+id/txtRazaMsc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="Raza"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txtGeneroMsc"
        app:layout_constraintTop_toBottomOf="@+id/txtEspecieMsc" />

    <TextView
        android:id="@+id/txtGeneroMsc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="Genero"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txtDescrMsc"
        app:layout_constraintTop_toBottomOf="@+id/txtRazaMsc" />

    <TextView
        android:id="@+id/txtEspecieMsc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="Especie"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/txtRazaMsc"
        app:layout_constraintTop_toBottomOf="@+id/txtNombreMsc" />

    <TextView
        android:id="@+id/txtEdadMsc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Edad"
        app:layout_constraintEnd_toEndOf="@+id/txtGeneroMsc"
        app:layout_constraintStart_toStartOf="@+id/txtGeneroMsc"
        app:layout_constraintTop_toBottomOf="@+id/txtGeneroMsc" />

</androidx.constraintlayout.widget.ConstraintLayout>